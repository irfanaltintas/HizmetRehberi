@model IEnumerable<HizmetRehberi.Models.Resimler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Resimler</h2>

<p>
    @Html.ActionLink("Yeni Resim Ekle", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayName("Firma Adı")
        </th>
        <th>
            @Html.DisplayName("Resim")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Firmalar.FirmaAdi)
        </td>
        <td>
            <img src="@item.ResimYolu" width="75" />
        </td>
        <td>
           
            @Html.ActionLink("Sil", "Delete", new { id = item.ResimID })
        </td>
    </tr>
}

</table>
