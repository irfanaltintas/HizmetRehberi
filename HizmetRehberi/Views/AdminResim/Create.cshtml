@model HizmetRehberi.Models.Resimler

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Çoklu Resim Ekleme</h2>

@using (Html.BeginForm("Create", "AdminResim", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Resimler</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.FirmaID, "Firma Adı", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("FirmaID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirmaID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Resimler", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="resimler" id="resimler" multiple accept=".jpg, .JPG, .png, .gif, .JPEG, .jpeg" class="form-control" />
            @Html.ValidationMessageFor(model => model.ResimYolu, "", new { @class = "text-danger" })
            <p class="text-danger"><i>Resim yüklerken birden fazla resmi seçili hale getirip yükleyebilirsiniz</i></p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
