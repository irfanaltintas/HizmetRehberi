@model HizmetRehberi.Models.Resimler

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Silmek istediğinize emin misiniz?</h3>
<hr />
<div>
    <h4>Resimler</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Resim")
        </dt>

        <dd>
            <img src="@Model.ResimYolu" width="150" />
        </dd>

        <dt>
            @Html.DisplayName("Firma Adı")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Firmalar.FirmaAdi)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-lg btn-primary" /> |
            @Html.ActionLink("Geri Dön", "Index")
        </div>
    }
</div>
