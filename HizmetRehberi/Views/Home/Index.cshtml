@model  IEnumerable<HizmetRehberi.Models.Firmalar>
@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
   
        <div class="col-10">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @{int num = 0;}
                    @foreach (var item in Model)
                    {
                        num++;
                        var active = num == 1 ? "active" : "";
                        <li data-target="#carouselExampleIndicators" data-slide-to="@num" class="@active"></li>
                    }
         
                </ol>
                <div class="carousel-inner">
                    @{ int i = 0;}
                    
                    @foreach (var item in Model)
                    {
                        i++;
                        var active = i == 1 ? "active" : "";
                    <div class="carousel-item @active">
                        <div class="intro">
                            <img class="intro-img img-fluid mb-3 mb-lg-0 rounded" style="width:100%; height: 500px;" src="@item.FirmaResim" alt="">
                            <div class="intro-text left-0 text-center bg-faded p-5 rounded">
                                <h2 class="section-heading mb-4">
                                    <span class="section-heading-upper">@item.FirmaAdi</span>
                                    <span class="section-heading-lower">Hakkımızda</span>
                                </h2>
                                <p class="mb-3">                                  
                                    @item.FirmaHakkinda
                                </p>
                                <div class="intro-button mx-auto">
                                    <a class="btn btn-primary btn-xl" href="/Home/OneFirm/@item.FirmaID">Daha Fazla!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
   
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                            
            </div>

        </div>
        <div class="col-2">
            <div class="intro-text left-0 text-center bg-faded1 p-5 rounded mt-5" >
                <h2 class="section-heading mb-4">
                    <span class="section-heading-upper">Reklam Alanı</span>
                </h2>
                <p class="mb-3">
                    Buraya reklam vermek isterseniz bize ulaşın
                </p>
                <div class="intro-button mx-auto">
                    <a class="btn btn-primary " href="/Home/About">Bize Ulaşın!</a>
                </div>
            </div>
        </div>
    </div>
</div>